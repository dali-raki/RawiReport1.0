@page "/report-create"
@page "/report/Edit/{Id:guid}"
@rendermode InteractiveServer


    <div class="mx-auto mt-10 p-6 bg-white rounded-xl shadow-lg">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Report Details</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

            <!-- Leader -->
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Leader</label>
                <p class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-100 text-gray-800">
                    @reportInfo.Leader
                </p>
            </div>

            <!-- Date -->
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Date</label>
                <p class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-100 text-gray-800">
                    @reportInfo.Date.ToString("yyyy-MM-dd")
                </p>
            </div>

            <!-- Format -->
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Format</label>
                <p class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-100 text-gray-800">
                    @reportInfo.ProductId
                </p>
            </div>

            <!-- Objective (Full Width) -->
            <div class="md:col-span-3">
                <label class="block text-sm font-medium text-gray-600 mb-1">Objective</label>
                <p class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-100 text-gray-800">
                    @reportInfo.Objective
                </p>
            </div>

            <!-- Time Info -->
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Enter Hour</label>
                <p class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-100 text-gray-800">
                    @reportInfo.StartTime.ToString(@"hh\:mm")
                </p>

                <label class="block text-sm font-medium text-gray-600 mt-4 mb-1">Exit Hour</label>
                <p class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-100 text-gray-800">
                    @reportInfo.EndTime.ToString(@"hh\:mm")
                </p>
            </div>

            <!-- Speed -->
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Speed (Beh)</label>
                <p class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-100 text-gray-800">
                    @reportInfo.Speed
                </p>
            </div>

        </div>
    </div>

    <div class="bg-white shadow rounded-xl p-6">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold">Machine Breakdowns</h2>
        <button type="button" @onclick="showmodal" class="px-4 py-2 bg-blue-600 text-white rounded-lg">+ Add Breakdown</button>
    </div>

    <div class="overflow-x-auto p-4">
        <table class="min-w-full border border-gray-300 divide-y divide-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">N</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Machine</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Heure d'arret</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Durre d'arret</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Code Error</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Description</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (breakdowns == null || breakdowns.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="px-4 py-2 text-center text-sm text-gray-600">No breakdowns added.</td>
                    </tr>
                }
                else
                {
                    @foreach (var b in breakdowns)
                    {
                        var machineName = lismachines.FirstOrDefault(m => m.MachineId == b.MachineId)?.MachineName ?? $"#{b.MachineId}";
                        <tr>
                            <td class="px-4 py-2">@(breakdowns.IndexOf(b)+1)</td>
                            <td class="px-4 py-2">@machineName</td>
                            <td class="px-4 py-2">@b.StoppingTime.ToString("HH:mm")</td>
                            <td class="px-4 py-2">@b.DurationStopping</td>
                            <td class="px-4 py-2">@b.ErrorCode</td>
                            <td class="px-4 py-2">@b.Description</td>
                            <td class="px-4 py-2">
                                <button type="button" class="text-blue-600 mr-2" @onclick="() => EditBreakdown(b)">Edit</button>
                                <button type="button"class="text-red-600" @onclick="() => DeleteBreakdown(b)">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    </div>


<BreackdownModal @ref="breackdownlink" Machines="lismachines" OnSave="@selectbreakdown" ReportId="Id" Edit="@operationstatus"/>