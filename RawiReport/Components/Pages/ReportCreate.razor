@page "/report-create"
@page "/report/Edit/{Id:guid}"
@rendermode InteractiveServer

<EditForm Model="reportInfo" OnValidSubmit="savereport">
    <div class="bg-white shadow rounded-xl p-6 mb-6">
        <h2 class="text-lg font-semibold mb-4">Operation Details</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">


            <!-- Date -->
            <div>
                <label class="block text-sm text-gray-600 mb-1">Date</label>
                <InputDate @bind-Value="reportInfo.Date" class="w-full border rounded-lg px-3 py-2" />
            </div>

            <!-- Format -->
            <div>
                <label class="block text-sm text-gray-600 mb-1">Format</label>
                <InputSelect @bind-Value="reportInfo.ProductId" class="w-full border rounded-lg px-3 py-2">
                    <option value="" selected disabled>Select format</option>
                    <option value="L2">2L</option>
                    <option value="L1_5">1.5L</option>
                    <option value="L1">1L</option>
                    <option value="L0_5">0.5L</option>
                </InputSelect>
            </div>

            <!-- Objective -->
            <div>
                <label class="block text-sm text-gray-600 mb-1">Objective</label>
                <InputText @bind-Value="reportInfo.Objective" class="w-full border rounded-lg px-3 py-2"
                           placeholder="Enter objective" />
            </div>

            <!-- Enter Hour + Exit Hour -->
            <div>
                <label class="block text-sm text-gray-600 mb-1">Entre Hour</label>
                <input typeof="time" @bind="reportInfo.StartTime" class="w-full border rounded-lg px-3 py-2" />

                <label class="block text-sm text-gray-600 mb-1">Exit Hour</label>
                <input typeof="time" @bind="reportInfo.EndTime" class="w-full border rounded-lg px-3 py-2" />
            </div>

            <!-- Speed -->
            <div>
                <label class="block text-sm text-gray-600 mb-1">Speed (Beh)</label>
                <InputNumber @bind-Value="reportInfo.Speed" class="w-full border rounded-lg px-3 py-2"
                             placeholder="Enter speed" />
            </div>

        </div>

        <div class="flex justify-between items-center mb-4">
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg">Create Report</button>
        </div>


    </div>
    <div class="bg-white shadow rounded-xl p-6">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold">Machine Breakdowns</h2>
        <button type="button" @onclick="showmodal" class="px-4 py-2 bg-blue-600 text-white rounded-lg">+ Add Breakdown</button>
    </div>

    <div class="overflow-x-auto p-4">
        <table class="min-w-full border border-gray-300 divide-y divide-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">N</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Machine</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Heure d'arret</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Durre d'arret</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Code Error</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Description</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (breakdowns == null || breakdowns.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="px-4 py-2 text-center text-sm text-gray-600">No breakdowns added.</td>
                    </tr>
                }
                else
                {
                    @foreach (var b in breakdowns)
                    {
                        var machineName = lismachines.FirstOrDefault(m => m.MachineId == b.MachineId)?.MachineName ?? $"#{b.MachineId}";
                        <tr>
                            <td class="px-4 py-2">@(breakdowns.IndexOf(b)+1)</td>
                            <td class="px-4 py-2">@machineName</td>
                            <td class="px-4 py-2">@b.StoppingTime.ToString("HH:mm")</td>
                            <td class="px-4 py-2">@b.DurationStopping</td>
                            <td class="px-4 py-2">@b.ErrorCode</td>
                            <td class="px-4 py-2">@b.Description</td>
                            <td class="px-4 py-2">
                                <button type="button" class="text-blue-600 mr-2" @onclick="() => EditBreakdown(b)">Edit</button>
                                <button type="button"class="text-red-600" @onclick="() => DeleteBreakdown(b)">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    </div>
</EditForm>

<BreackdownModal @ref="breackdownlink" Machines="lismachines" OnSave="selectbreakdown" />